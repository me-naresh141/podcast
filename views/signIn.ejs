<% include persists/header%>
    <section class="signup-section">
        <div class="container height-full flex justify-around align-center flex-colum-mq height-auto-mq ">
            <div
                class="width50  height-full flex flex-direction-column justify-center width-100mq order1-mq justify-start-mq">
                <h1 class="font-2rem font-weight-800">Everthing <strong class="color-orange">Podcasting.</strong>
                </h1>
                <h2 class="font-1-5rem margib-tb-p5 font-weight-600">Discover & create new podcasts</h2>
                <p class="font-1-3rem"> Lorem ipsum dolor, sit amet consectetur adipisicing elit. Odio at mollitia
                    consequatur dicta ipsa quisquam magni ex quae enim! Ratione magni illo sequiitaque,
                    nobis est fugiat alias .</p>
            </div>
            <!-- form div -->
            <div class="form-div width-100mq margin-top5rem-mq">
                <h2 class="text-center font-1-5rem">Sign in for free</h2>
                <p class="text-center margin-bottom3">Already haven't an account?<a class="color-orange underline"
                        href="/users/register">Click here to
                        sign up</a></p>
                <form class="flex flex-direction-column " action="/users/login" method="post">
                    <p class="error">
                        <%=error%>
                    </p>
                    <input type="email" name="email" placeholder="E-mail Address">
                    <!-- password -->
                    <div class="flex align-center margin-bottom3 margib-tb-p5">
                        <input class="width90" type="password" name="password" id="password-input"
                            placeholder="password(min 5 characters)">
                        <span class="material-symbols-outlined visivilty">
                            visibility_off
                        </span>
                    </div>
                    <button type="submit" class="btn-submit bg-color-orange color-white"> Start my podcast</button>

                    <p class="text-center">By signing up, you agree to the Terms & Conditions and the Privacy
                        Policy.
                    </p>
                </form>
            </div>

        </div>
    </section>

    <% include persists/footer%>