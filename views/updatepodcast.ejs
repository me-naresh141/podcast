<% include persists/header%>
    <section class="signup-section">
        <div class="container height-full flex justify-around align-center flex-colum-mq height-auto-mq ">
            <div
                class="width50  height-full flex flex-direction-column justify-center order1-mq width-100mq justify-start-mq ">
                <h1 class="font-2rem font-weight-800">Everthing <strong class="color-orange">Podcasting.</strong>
                </h1>
                <h2 class="font-1-5rem margib-tb-p5 font-weight-600">Discover & create new podcasts</h2>
                <p class="font-1-3rem"> Lorem ipsum dolor, sit amet consectetur adipisicing elit. Odio at mollitia
                    consequatur dicta ipsa quisquam magni ex quae enim! Ratione magni illo sequiitaque,
                    nobis est fugiat alias .</p>
            </div>
            <!-- form div -->
            <div class="form-div width-100mq margin-top5rem-mq">
                <h2 class="text-center font-1-5rem">Edit Podcast </h2>

                <form class="flex flex-direction-column " action="/podcast/<%=podcast._id%>/edit"
                    enctype="multipart/form-data" method="post">
                    <label for="Plane">title</label>
                    <input type="text" name="title" value="<%=podcast.title%>" placeholder="Title">
                    <label for="Plane">Artist</label>
                    <input type="text" name="artist" value="<%=podcast.artist%>" placeholder="Artist">
                    <label for="Plane">Select Plane</label>
                    <select name="plane" id="Plane">
                        <option value="<%=podcast.plane%>">
                            <%=podcast.plane%>
                        </option>
                        <option value="free">free</option>
                        <option value="vip">vip</option>
                        <option value="Primium">Primium</option>
                    </select>
                    <label for="">Poster image</label>
                    <input type="file" name="poster" value="<%=podcast.poster%>" placeholder="image">

                    <label for=""> Select Audio</label>
                    <input type="file" name="audio" value="<%=podcast.audio%>" placeholder="audio">

                    <button type="submit" class="btn-submit bg-color-orange color-white">Add Podcast</button>


                </form>
            </div>

        </div>
    </section>

    <% include persists/footer%>